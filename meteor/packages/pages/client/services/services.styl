@import 'client/_styles/globals.import.styl'
@import 'jeet'

.services-page-wrapper
    lost-center 976px 10px
    img
        max-width 100%

    > .services-page-inside
        margin-top 2rem
        > aside
            lost-column 1/3 3
            padding 2em
            box-sizing border-box
            background-color lighten($DiemGrey, 80%)
            +below(1300px)
                stack()
                padding 1em
            > img
                col(1/2)
                max-width 14rem
                +above(1300px)
                    padding-bottom 2em
                    width 100%
            article
                font-size responsive
                col(1/2)
                +above(1300px)
                    stack()
                    padding-bottom 2em
