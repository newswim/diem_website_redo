.diem-slider
  border 1px solid black
  lost-center 900px
  position relative

.diem-slider div
    width auto

.slick-prev:before, .slick-next:before
  color silver

.diem-slider
    overflow hidden

.info
    section
        // width 100%
        // margin auto
        position absolute
        bottom 14%
        // top 66%
        right 0
        padding-left 2rem
        padding-right 2rem
        color transparent
        area: rgba(106, 61, 61, 0.8)
        h3
            color white
            shadow-stroke(#444444)
            font-size responsive 28px 66px
            font-weight 100
            fill-opacity .3
            text-align center
