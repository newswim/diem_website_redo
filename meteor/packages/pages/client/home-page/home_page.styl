.diem-slider {
  border 1px solid black
  lost-center 900px
  position relative
  // top:      100px;
  // left:     100px;
}

.diem-slider div {
    width auto
}

.slick-prev:before, .slick-next:before {
  color silver
}

.diem-slider {
    overflow: hidden
}

.info
    div
        width 100%
        position absolute
        top 30%
        margin auto
        color transparent
        area: rgba(106, 61, 61, 0.2)
        h3
            color white
            shadow-stroke(#444444)
            font-size responsive 34px 65px
            font-weight 100
            fill-opacity .3
            text-align center
